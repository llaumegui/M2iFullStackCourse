@model List<Produit>
@{
    ViewData["Title"] = "Favoris";
}

@if (Model.Count == 0)
{
    <p>Aucun Favoris à afficher</p>
}
else
{
    @foreach (var prod in Model)
    {
        <p>
            @prod.Id @prod.Name @prod.Description
        </p>
        <a asp-action="ProduitDetail" asp-controller="Produits" asp-route-id="@prod.Id" class="btn btn-primary">Détails</a>
    }
}