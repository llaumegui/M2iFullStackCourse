

@model Categorie

@{
    if (Model == null)
    ViewData["Title"] = "Ajout d'une catégorie";
    else
    ViewData["Title"] = $"Modification de la catégorie {Model.Nom} ";
}

<h2>@(Model == null ? "Ajout" : "Modification") d'une catégorie</h2>

<form asp-action="SubmitCategorie" asp-controller="Home">
    <input asp-for="@Model.Id" type="text" class="form-control" hidden>

    <div class="mb-3">
        <label asp-for="@Model.Nom" class="form-label">Intitulé de la catégorie :</label>
        <input asp-for="@Model.Nom" type="text" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Valider</button>
</form>