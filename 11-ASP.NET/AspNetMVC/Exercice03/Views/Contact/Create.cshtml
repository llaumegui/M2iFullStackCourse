@{
    @model Contact
}

<head>
	<h2>Create a Contact</h2>
	<hr />
</head>
<body>
	<form asp-action="Create" method="post">
		<div class="row mb-3">
			<div class="col-4">
				<label class="form-label" asp-for="FirstName"></label>
			</div>
			<div class="col-8">
				<input class="form-control" asp-for="FirstName" />
			</div>
		</div>

		<div class="row mb-3">
			<div class="col-4">
				<label class="form-label" asp-for="LastName"></label>
			</div>
			<div class="col-8">
				<input class="form-control" asp-for="LastName" />
			</div>
		</div>

		<div class="row mb-3">
			<div class="col-4">
				<label class="form-label" asp-for="Email"></label>
			</div>
			<div class="col-8">
				<input class="form-control" asp-for="Email" />
			</div>
		</div>

		<div class="row mb-3">
			<div class="col-4">
				<label class="form-label" asp-for="PhoneNumber"></label>
			</div>
			<div class="col-8">
				<input class="form-control" asp-for="PhoneNumber" />
			</div>
		</div>

		<div class="d-flex">
				<button class="ms-auto btn btn-success"><span class="bi bi-plus-circle"></span> Add</button>
		</div>
	</form>
</body>
