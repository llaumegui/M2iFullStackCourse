@model Cat
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    string formMode = ViewBag.FormMode;



    ViewData["Title"] = formMode switch
    {
        "Edit" => "Editer un chat",
        "Delete" => "Supprimer un chat",
        "Details" => "Voir les détails d'un chat",
        _ => "Ajouter un chat"
    };

    var btnColorClass = formMode switch
    {
        "Edit" => "btn-warning",
        "Delete" => "btn-danger",
        "Details" => "btn-secondary",
        _ => "btn-success"
    };

    var btnText = formMode switch
    {
        "Edit" => "Editer",
        "Delete" => "Confirmer",
        "Details" => "Retour",
        _ => "Ajouter"
    };

}

<form asp-action="@formMode">
	<input type="hidden" asp-for="Id" />
	<div class="row mb-3">
		<div class="col-4">
		    <label asp-for="Name" class="form-label"></label>
        </div>
		<div class="col-8">
		    <input asp-for="Name" class="form-control"/>
        </div>
		<div class="col-12">
		    <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="row mb-3">
		<div class="col-4">
		    <label asp-for="Breed" class="form-label"></label>
        </div>
		<div class="col-8">
            <input asp-for="Breed" class="form-control" />
        </div>
		<div class="col-12">
            <span class="text-danger" asp-validation-for="Breed"></span>
        </div>
    </div>
    <div class="row mb-3">
		<div class="col-4">
		    <label asp-for="Age" class="form-label"></label>
        </div>
		<div class="col-8">
            <input asp-for="Age" class="form-control" />
        </div>
		<div class="col-12">
            <span class="text-danger" asp-validation-for="Age"></span>
        </div>
    </div>
    <div class="row mb-3">
		<div class="col-4">
		    <label asp-for="Color" class="form-label"></label>
        </div>
		<div class="col-8">
            <input asp-for="Color" class="form-control" />
        </div>
		<div class="col-12">
            <span class="text-danger" asp-validation-for="Color"></span>
        </div>
    </div>
	<div class="d-flex">
        <button class="ms-auto btn @btnColorClass">
            @btnText
        </button>
    </div>
</form>
