@model HashSet<Cat>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Liste de chats";
}

<div class="d-flex">
	<h1>Liste des chats</h1>
	<a asp-action="Create" class="btn btn-success ms-auto">Ajouter</a>
</div>
<hr />
<table class="table table-striped">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameForInnerType((Cat c) => c.Id)
			</th>
			<th>
				@Html.DisplayNameForInnerType((Cat c) => c.Name)
			</th>
			<th>
				@Html.DisplayNameForInnerType((Cat c) => c.Breed)
			</th>
			<th>
				@Html.DisplayNameForInnerType((Cat c) => c.Age)
			</th>
			<th>
				@Html.DisplayNameForInnerType((Cat c) => c.Color)
			</th>
			<th>
				Actions
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var c in Model) 
		{
			<tr>
				<td>
					@c.Id
				</td>
				<td>
					@c.Name
				</td>
				<td>
					@c.Breed
				</td>
				<td>
					@c.Age
				</td>
				<td>
					@c.Color
				</td>
				<td>
					<a class="btn btn-warning" asp-action="Edit" asp-route-id="@c.Id">Editer</a>
				</td>
			</tr>
		}
	</tbody>
</table>
