@model PictureCreateViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Store a picture";
}

<h1>@ViewData["Title"]</h1>
<hr />

<form asp-action="Create" enctype="multipart/form-data">
	<div class="mb-3">
		<div class="col-4">
			<label class="form-label" asp-for="Title"></label>
		</div>
		<div class="col-8">
			<input class="form-control" asp-for="Title" />
		</div>
		<div class="col-12">
			<span asp-validation-for="Title"></span>
		</div>
    </div>
	<div class="mb-3">
		<div class="col-4">
			<label class="form-label" asp-for="Picture"></label>
		</div>
		<div class="col-8">
			<input class="form-control" asp-for="Picture" />
		</div>
		<div class="col-12">
			<span asp-validation-for="Picture"></span>
		</div>
	</div>
	<div class="d-flex">
		<button class="ms-auto btn btn-success">
			<span class="bi bi-save"></span> Save
		</button>
	</div>
</form>
