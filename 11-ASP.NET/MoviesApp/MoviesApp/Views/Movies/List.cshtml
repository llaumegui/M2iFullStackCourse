@model MoviesCore.Models.Movie[];
@{
    ViewData["Title"] = "Movies Page";
}

<div class="text-center">
    <h1 class="display-4">Movies</h1>
    <div class="row row-cols-1 row-cols-md-5 g-4">
        @foreach (var movie in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@movie.PosterURL" class="card-img-top" alt="@movie.Title" style="object-fit: cover; width: 100%; height: 300px;"/>
                    <div class="card-body">
                        <h5 class="card-title">@movie.Title</h5>
                        <p class="card-text">@movie.Genres</p>
                        <p class="card-text"><small class="text-muted">@movie.Year</small></p>
                        <a asp-action="Edit" asp-route-movieId="@movie.Id">Edit</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <a asp-action="Create">Create</a>
</div>