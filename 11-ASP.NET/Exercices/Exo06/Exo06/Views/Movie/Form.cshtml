@model Movie

@{
    string formMode = ViewBag.FormMode;

    ViewData["Title"] = "Afficher Film";
}

<html>
<head>
    <title>@formMode : @Model.Title</title>
</head>
<body>
<form asp-action="Create" enctype="multipart/form-data">
    <div class="mb-3">
        <div class="col-4">
            <label class="form-label" asp-for="Title"></label>
        </div>
        <div class="col-8">
            <input class="form-control" asp-for="Title" />
        </div>
        <div class="col-12">
            <span asp-validation-for="Title"></span>
        </div>
    </div>
    <div class="mb-3">
        <div class="col-4">
            <label class="form-label" asp-for="Picture"></label>
        </div>
        <div class="col-8">
            <input class="form-control" asp-for="Picture" />
        </div>
        <div class="col-12">
            <span asp-validation-for="Picture"></span>
        </div>
    </div>
    <div class="d-flex">
        <button class="ms-auto btn btn-success">
            <span class="bi bi-save"></span> Save
        </button>
    </div>
</form>
</body>
</html>