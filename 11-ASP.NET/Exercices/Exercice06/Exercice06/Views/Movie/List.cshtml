@model HashSet<Movie>

@{
    ViewData["Title"] = "Liste des Films";
}

<!DOCTYPE html>

<html>
<head>
    <title>Liste des Films</title>
</head>
<body>
<table class="table table-striped">
    <thead>
    <tr>
        <th>ID</th>
        <th>Nom</th>
        <th>Année</th>
        <th>Réalisateur</th>
        <th>Genre</th>
        <th>Vu ?</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var m in Model)
    {
        <tr>
            <td>@m.Id</td>
            <td>@m.Title</td>
            <td>@m.Year</td>
            <td>@m.Director</td>
            <td>@m.Genre</td>
            <td>
                <input type="checkbox"/>
            </td>
            @*<td>
                <a asp-action="Details" asp-route-id="@m.Id" class="btn btn-secondary"><span class="bi bi-pencil-square"></span> Details</a>
                <a asp-action="Details" asp-route-id="@m.Id" class="btn btn-secondary"><span class="bi bi-pencil-square"></span> Edit</a>
                <a asp-action="Details" asp-route-id="@m.Id" class="btn btn-secondary"><span class="bi bi-pencil-square"></span> Delete</a>
            </td>*@
        </tr>
    }
    </tbody>
</table>
<div class="d-flex">
    <a asp-action="Create" class="btn btn-success ms-auto"><span class="bi bi-plus-circle"></span>Ajouter</a>
</div>
</body>
</html>