@model List<ToDo>;
@{
    ViewData["Title"] = "TodoList";
}
<div class="container">
    <h1>TodoList</h1>
    <table class="table table-dark">
        <thead>
            <tr>
                <th>@Html.DisplayNameForInnerType((ToDo c) => c.Id)</th>
                <th>@Html.DisplayNameForInnerType((ToDo c) => c.Title)</th>
                <th>@Html.DisplayNameForInnerType((ToDo c) => c.Description)</th>
                <th>@Html.DisplayNameForInnerType((ToDo c) => c.Finished)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    @if(item.Finished == false)
                    {
                        <td><a asp-action="Change" asp-route-id="@item.Id" class="btn btn-primary">A faire</a></td>
                    }
                    else
                    {
                        <td><a asp-action="Change" asp-route-id="@item.Id" class="btn btn-success">Terminé</a></td>
                    }
                    @*<td><a asp-action="Change" asp-route-id="@item.Id" class="btn btn-@(item.Finished?"success":"primary")">@(item.Finished?"A faire":"Terminé")</a></td>*@

                    <td><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Supprimer</a></td>
                </tr>                 
            }              
        </tbody>
    </table>
</div>


