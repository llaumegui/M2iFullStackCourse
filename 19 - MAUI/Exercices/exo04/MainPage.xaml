<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="exo04.MainPage"
             Shell.FlyoutItemIsVisible="False"
             BackgroundColor="#EFE7DC">
    <VerticalStackLayout>
        <Label Text="Hangman Game"
               HorizontalOptions="Center" />
        <Label x:Name="LabelErrors"
               Text="Errors:0/7" />
        <Image
            Source="{Binding HangmanPath}"
            HeightRequest="185"
            Aspect="AspectFit"
            HorizontalOptions="Center" />
        <Label x:Name="LabelWord" />
        <CollectionView ItemsSource="{Binding Keys}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="">
                    <Frame Padding="5" CornerRadius="10" BorderColor="Transparent" Margin="10">
                        <Button Text="{Binding}" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>